//Inicializar el juego
var game = {
  timer: 0,
  money: 0,
  level: 0,
};

//Inicializar el temporizador
function startTimer() {
  game.timer = setInterval(function() {
    game.timer++;
  }, 1000);
}

//Método para minar postrecitos
function minePostre() {
  game.money += 10;
}

//Método para subir de nivel
function levelUp() {
  game.level++;
  game.money += 100;
}

